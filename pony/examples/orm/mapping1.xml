<tables>
  <table name="SUBJECTS">
    <column name="Name" pk="true" attr="Subject.name" />
  </table>
  <table name="GROUPS">
    <column name="GrNum" pk="true" attr="Group.number" domain="SMALLINT" />
  </table>
  <table name="GROUPS_SUBJECT" relation="Group.subjects Subject.groups">
    <column name="GrNum" pk="true" attr="Subject.groups.number" />
    <column name="SubjName" pk="true" attr="Group.subjects.name" />
  </table>
  <table name="PERSONS">
    <column name="Id" pk="true" attr="Person.id" />
    <column name="Type" kind="discriminator">
      <case value="P" entity="Professor" />
      <case value="S" entity="Student" />
    </column>
    <column name="FirstName" attr="Person.first_name" />
    <column name="LastName" attr="Person.last_name" />
    <column name="Passport" attr="Person.passport" />
    <column name="Title" attr="Professor.title" />
    <column name="GrNum" attr="Student.group" />
    <column name="StudNum" attr="Student.number" />
  </table>
  <table name="MARKS">
    <column name="Date" attr="Mark.date" />
    <column name="StudentId" pk="true" attr="Mark.student" />    <!-- attr="Mark.student.id" -->
    <column name="Discipline" pk="true" attr="Mark.subject" />   <!-- attr="Mark.subject.name" -->
    <column name="Value" attr="Mark.value" />
  </table>
</tables>

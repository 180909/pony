<?xml version="1.0"?>
<tables>
  <table name="SUBJECTS" entity="Subject">
    <column name="Name" attr="Subject.name" />
  </table>
  <table name="GROUPS" entity="Group">
    <column name="GrNum" attr="Group.number" domain="SMALLINT" />
    <column name="Faculty" attr="Group.faculty" />
    <colum name="Spec" attr="Group.speciality" />
  </table>
  <table name="GROUPS_SUBJECT" relation="Group.subjects Subject.groups">
    <column name="GrNum" attr="Subject.groups.number" />
    <column name="SubjName" attr="Group.subjects.name" />
  </table>
  <table name="PERSONS" entity="Person">
    <column name="Type" kind="discriminator">
      <case value="P" entity="Professor" />
      <case value="S" entity="Student" />
    </column>
    <column name="Id" attr="Person.id" />
    <column name="FirstName" attr="Person.first_name" />
    <column name="LastName" attr="Person.last_name" />
    <column name="Passport" attr="Person.passport" />
    <column name="Title" attr="Professor.title" />
    <column name="GrNum" attr="Student.group" />
    <column name="StudNum" attr="Student.number" />
  </table>
  <table name="MARKS" entity="Mark">
    <column name="Date" attr="Mark.date" />
    <column name="Discipline" attr="Mark.subject" />   <!-- attr="Mark.subject.name" -->
    <column name="Student" attr="Mark.student" />      <!-- attr="Mark.student.id" -->
    <column name="Value" attr="Mark.value" />
  </table>
</tables>
